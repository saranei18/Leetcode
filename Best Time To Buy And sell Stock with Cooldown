class Solution {
public:
    int dp[5001][2];
    int helper(vector<int>&prices,int index,bool buy)
    {
        if(index>=prices.size())return 0;
        int profit=0;
        if(dp[index][buy]!=-1)return dp[index][buy];
        if(buy)
        {
            int consider=helper(prices,index+1,false)-prices[index];
            int notconsider=helper(prices,index+1,true);
            profit=max({profit,consider,notconsider});
        }
        else
        {
            int consider=helper(prices,index+2,true)+prices[index];
            int notconsider=helper(prices,index+1,false);
            profit=max({profit,consider,notconsider});
        }
        dp[index][buy]=profit;
        return dp[index][buy];
    }
    int maxProfit(vector<int>& prices) 
    {
        memset(dp,-1,sizeof dp);
        return helper(prices,0,true);    
    }
};

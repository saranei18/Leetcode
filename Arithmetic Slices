class Solution {
public:
    int numberOfArithmeticSlices(vector<int>& a) 
    {
        int n=a.size();
        int prev=INT_MAX;
        int ans=0;
        int count=0;
        for(int i=0;i<n-1;i++)
        {
            if(a[i+1]-a[i]==prev)
                ans+=count,count++;
            else
                prev=a[i+1]-a[i],count=1;
        }
        return ans;
    }
};

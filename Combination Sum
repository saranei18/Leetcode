class Solution {
public:
    vector<vector<int>>result;
    void permute(vector<int>&candidates,int target,int currsum,vector<int>&temp,int index)
    {
        if(currsum>target)return;
        if(currsum==target)
        {
            result.push_back(temp);
        }
        else
        {
            for(int i=index;i<candidates.size();i++)
            {
                //choose
                currsum+=candidates[i];
                temp.push_back(candidates[i]);
                //explore
                permute(candidates,target,currsum,temp,i);
                //unchoose
                temp.pop_back();
                currsum-=candidates[i];
            }
        }
    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target)
    {
        vector<int>temp;
        permute(candidates,target,0,temp,0);
        return result;
    }
};
